path=(
    $HOME/bin(N-/)
    $HOME/.phpenv/bin(N-/)
    $HOME/.pyenv/bin(N-/)
    $HOME/.bin(N-/)
    /usr/local/bin(N-/)
    /usr/bin(N-/)
    $path
)

if hash phpenv 2>/dev/null; then
    eval "$(phpenv init -)"
fi

if hash pyenv 2>/dev/null; then
    eval "$(pyenv init -)"
    eval "$(pyenv virtualenv-init -)"
fi

typeset -U path PATH
