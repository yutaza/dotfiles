#!/bin/sh
source $(dirname $0)/.init.sh

function distclean()
{
    for f in $ETC_DIR/*; do
        base=$(basename $f)
        rm -rf $HOME/.$base
    done

    rm -rf $HOME/.dotfiles
}

function build()
{
    for f in $ETC_DIR/*; do
        base=$(basename $f)
        xln $f $HOME/.$base
    done

    xln $TOP_DIR $HOME/.dotfiles
}

#main
case $1 in
    build ) build ;;
    distclean ) distclean ;;
esac
