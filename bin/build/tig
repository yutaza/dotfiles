#!/bin/sh
source $(dirname $0)/.init.sh

TIG_DIR=$PLUGINS_DIR/git/tig

function build()
{
    cd $TIG_DIR
    git reset --hard $1
    make distclean
    make prefix=$TIG_DIR
    make install prefix=$TIG_DIR
}

function make_symbolick_link()
{
    xln $TIG_DIR/bin/tig $BIN_DIR/tig
}

#main
build $1
make_symbolick_link
